<Window x:Class="Module.Gamma.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Module.Gamma"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        d:DataContext="{d:DesignInstance local:ViewModel}">
        
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Margin="15">
            <TextBox Text="{Binding Model.FirstLine, UpdateSourceTrigger=PropertyChanged, Delay=300}"/>
            <TextBox Text="{Binding Model.SecondLine, UpdateSourceTrigger=PropertyChanged, Delay=300}"/>
            <TextBox Text="{Binding Model.ResultLine, UpdateSourceTrigger=PropertyChanged, Delay=300}"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <Button Command="{Binding GenerateKeyCommand}" Content="Создать ключ"/>
            <TextBlock Text="Создавать на ходу"/>
            <CheckBox IsChecked="{Binding Model.IsKeyGenerating}"/>
            
        </StackPanel>
    </Grid>
</Window>
